<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<script>
     $(document).ready(function () {
        const apiUrl = "https://websitehub-vki3.onrender.com/api";
        const table = $("#myTable").DataTable();

        // Fetch data from the API and populate the table
        async function fetchData() {
            try {
                const response = await fetch(apiUrl);
                const data = await response.json();

                table.clear(); // Clear existing table data
                data.forEach((item, index) => {
                    table.row.add([
                        index + 1,
                        item.name,
                        item.url,
                        item.desc,
                        item.category,
                        `
                        <button class="btn btn-warning edit-btn" 
                                data-bs-toggle="modal" 
                                data-bs-target="#exampleModal" 
                                data-id="${item._id}" 
                                data-name="${item.name}" 
                                data-url="${item.url}" 
                                data-desc="${item.desc}" 
                                data-category="${item.category}">
                            Edit
                        </button>
                        <button class="btn btn-danger delete-btn" data-id="${item._id}">Delete</button>
                        `
                    ]).draw();
                });
            } catch (error) {
                console.error("Error fetching data:", error);
            }
        }

        // Delete item
        $(document).on("click", ".delete-btn", async function () {
            const id = $(this).data("id");
            if (confirm("Are you sure you want to delete this item?")) {
                try {
                    await fetch(`${apiUrl}/delete/${id}`, { method: "DELETE" });
                    alert("Item deleted successfully!");
                    fetchData();
                } catch (error) {
                    console.error("Error deleting item:", error);
                }
            }
        });

        // Edit item
        $(document).on("click", ".edit-btn", function () {
            const id = $(this).data("id");
            const name = $(this).data("name");
            const url = $(this).data("url");
            const desc = $(this).data("desc");
            const category = $(this).data("category");

            // Prefill modal form fields
            $("#exampleModal #name").val(name);
            $("#exampleModal #url").val(url);
            $("#exampleModal #desc").val(desc);
            $("#exampleModal #category").val(category);

            // Handle form submission
            $("#exampleModal .btn-primary").off("click").on("click", async function () {
                const updatedData = {
                    name: $("#exampleModal #name").val(),
                    url: $("#exampleModal #url").val(),
                    desc: $("#exampleModal #desc").val(),
                    category: $("#exampleModal #category").val(),
                };

                try {
                    await fetch(`${apiUrl}/update/${id}`, {
                        method: "PUT",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(updatedData),
                    });
                    alert("Item updated successfully!");
                    $("#exampleModal").modal("hide");
                    fetchData();
                } catch (error) {
                    console.error("Error updating item:", error);
                }
            });
        });

        // Fetch data on page load
        fetchData();
    });

       
    
</script>

