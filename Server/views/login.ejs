<body>
    <div class="d-flex justify-content-center">
        <div class="my-5 py-3">      
        <h1>login form</h1>
          <form action="/login"  method="POST" class="form-inline py-3">
            <label for="username">Username</label>
            <input type="text" class="form-control py-2" name="username" id="username" placeholder="Enter your email" required>
            <label for="password">Password</label>
            <input type="password" placeholder="Enter your password" name="password" id="password" class="form-control py-2" required>
            <button type="submit" class="btn btn-primary w-100 my-2">Submit </button>
         </form>
        </div>
    </div>
</body>
